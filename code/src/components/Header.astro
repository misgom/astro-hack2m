---
interface Props {
  currentPath?: string;
}

const { currentPath = '/' } = Astro.props;
---

<header class="bg-black/30 backdrop-blur-sm border-b border-purple-900/30">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8" aria-label="Main navigation">
    <div class="flex justify-between h-16">
      <div class="flex">
        <div class="flex-shrink-0 flex items-center">
          <a href="/" class="text-xl font-bold text-white hover:text-purple-300 transition-colors">Hack2m</a>
        </div>
        <div class="hidden sm:ml-6 sm:flex sm:space-x-8">
          <a
            href="/"
            class={`inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium ${
              currentPath === '/'
                ? 'border-purple-400 text-white'
                : 'border-transparent text-gray-300 hover:text-white hover:border-purple-400/50'
            }`}
          >
            Home
          </a>
          <a
            href="/challenges"
            class={`inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium ${
              currentPath === '/challenges'
                ? 'border-purple-400 text-white'
                : 'border-transparent text-gray-300 hover:text-white hover:border-purple-400/50'
            }`}
          >
            Challenges
          </a>
          <a
            href="/learn"
            class={`inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium ${
              currentPath === '/learn'
                ? 'border-purple-400 text-white'
                : 'border-transparent text-gray-300 hover:text-white hover:border-purple-400/50'
            }`}
          >
            Learn
          </a>
          <a
            href="/leaderboard"
            class={`inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium ${
              currentPath === '/leaderboard'
                ? 'border-purple-400 text-white'
                : 'border-transparent text-gray-300 hover:text-white hover:border-purple-400/50'
            }`}
          >
            Leaderboard
          </a>
        </div>
      </div>
      <!--
      <div class="flex items-center">
        <a
          href="/login"
          class="inline-flex items-center px-4 py-2 text-sm font-medium rounded-md text-white bg-purple-600/50 hover:bg-purple-600/70 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500/50 border border-purple-500/30 transition-colors"
        >
          Login
        </a>
      </div>
      -->
    </div>
  </nav>
</header>

<style>
  /* Mobile menu styles */
  @media (max-width: 640px) {
    .sm\:hidden {
      display: none;
    }
  }
</style>
