---
import Layout from '../layouts/Layout.astro';
import { Button } from "flowbite-svelte";
import App from '../components/App.svelte';
import Chat from '../components/Chat.svelte';
---

<Layout title="Hack2m">
	<!-- background -->
	<div class="fixed inset-0 -z-10 min-h-screen w-full items-center px-5 py-24 [background:radial-gradient(125%_125%_at_50%_10%,#000_40%,#63e_100%)]"></div>

	<main class="container mx-auto px-4 py-8">
		<div class="text-center">
			<h1 class="text-5xl font-bold text-white mb-8">Welcome to Hack2m</h1>
			<p class="text-xl text-white/80 mb-8 max-w-2xl mx-auto">
				A platform for learning and practicing LLM security challenges. Test your skills in various prompt injection and security scenarios.
			</p>
			<div class="space-x-4">
				<Button href="/challenges" color="blue" size="xl">Start Challenges</Button>
				<Button href="/learn" color="dark" size="xl">Learn More</Button>
			</div>
		</div>

		<div class="mt-16 grid grid-cols-1 md:grid-cols-3 gap-8">
			<div class="bg-white/10 p-6 rounded-lg">
				<h3 class="text-xl font-bold text-white mb-4">9 Unique Challenges</h3>
				<p class="text-white/80">Test your skills across different difficulty levels and security scenarios.</p>
			</div>
			<div class="bg-white/10 p-6 rounded-lg">
				<h3 class="text-xl font-bold text-white mb-4">Real-time Feedback</h3>
				<p class="text-white/80">Get immediate responses and learn from your attempts.</p>
			</div>
			<div class="bg-white/10 p-6 rounded-lg">
				<h3 class="text-xl font-bold text-white mb-4">Learn Security</h3>
				<p class="text-white/80">Explore our comprehensive guides and articles about LLM security and best practices.</p>
			</div>
		</div>
	</main>
</Layout>

<style>
	html, body {
		min-height: 100%;
	}
</style>
