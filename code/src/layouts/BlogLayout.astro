---
import Layout from './Layout.astro';

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
	<!-- background -->
	<div class="fixed inset-0 -z-10 min-h-screen w-full items-center px-5 py-24 [background:radial-gradient(125%_125%_at_50%_10%,#000_40%,#63e_100%)]"></div>

	<main class="container mx-auto px-4 py-8">
		<article class="prose prose-invert max-w-none prose-lg dark:prose-invert mx-auto">
			<header class="mb-20 text-center relative">
				<div class="absolute inset-0 bg-gradient-to-r from-blue-500/20 to-purple-500/20 blur-3xl -z-10"></div>
				<h1 class="text-5xl font-bold mb-8 text-white tracking-tight leading-tight">{frontmatter.title}</h1>
				<div class="flex items-center justify-center gap-4 text-white/70">
					<div class="flex items-center gap-2">
						<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
							<path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
						</svg>
						<span>{frontmatter.author}</span>
					</div>
					<span class="text-white/30">â€¢</span>
					<div class="flex items-center gap-2">
						<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
							<path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
						</svg>
						<time datetime={frontmatter.pubDate}>{new Date(frontmatter.pubDate).toLocaleDateString()}</time>
					</div>
				</div>
			</header>

			<div class="text-white max-w-3xl mx-auto">
				<slot />
			</div>
		</article>
	</main>
</Layout>

<style>
	html, body {
		min-height: 100%;
	}

	.prose {
		--tw-prose-body: #ffffff;
		--tw-prose-headings: #ffffff;
		--tw-prose-links: #93c5fd;
		--tw-prose-bold: #ffffff;
		--tw-prose-counters: #ffffff;
		--tw-prose-bullets: #ffffff;
		--tw-prose-hr: #ffffff;
		--tw-prose-quotes: #ffffff;
		--tw-prose-quote-borders: #ffffff;
		--tw-prose-captions: #ffffff;
		--tw-prose-code: #ffffff;
		--tw-prose-pre-code: #ffffff;
		--tw-prose-pre-bg: #1e293b;
		--tw-prose-th-borders: #ffffff;
		--tw-prose-td-borders: #ffffff;
	}

	/* Base text styling */
	.prose :where(p):not(:where([class~="not-prose"] *)) {
		color: #ffffff;
		font-size: 1.125rem;
		line-height: 1.75;
		margin-bottom: 1.75em;
	}

	/* Headings */
	.prose h1 {
		font-size: 2.5rem;
		line-height: 1.2;
		margin-top: 2.5em;
		margin-bottom: 1em;
		position: relative;
		font-weight: 700;
		letter-spacing: -0.025em;
	}

	.prose h2 {
		font-size: 2rem;
		line-height: 1.3;
		margin-top: 2.5em;
		margin-bottom: 1em;
		color: #ffffff;
		position: relative;
		font-weight: 600;
		letter-spacing: -0.025em;
		padding-bottom: 0.5em;
		border-bottom: 1px solid rgba(255, 255, 255, 0.1);
	}

	.prose h3 {
		font-size: 1.5rem;
		line-height: 1.4;
		margin-top: 2em;
		margin-bottom: 1em;
		color: #ffffff;
		font-weight: 600;
		letter-spacing: -0.025em;
	}

	/* Lists */
	.prose ul, .prose ol {
		color: #ffffff;
		padding-left: 1.5em;
		margin-bottom: 1.75em;
	}

	.prose ul > li {
		position: relative;
		padding-left: 1.5em;
		margin-bottom: 0.75em;
	}

	.prose ul > li::before {
		content: "";
		position: absolute;
		left: 0;
		top: 0.75em;
		width: 6px;
		height: 6px;
		background-color: #93c5fd;
		border-radius: 50%;
	}

	.prose ol {
		counter-reset: item;
	}

	.prose ol > li {
		position: relative;
		padding-left: 2em;
		margin-bottom: 0.75em;
		counter-increment: item;
	}

	.prose ol > li::before {
		content: counter(item) ".";
		position: absolute;
		left: 0;
		color: #93c5fd;
		font-weight: 500;
	}

	/* Code blocks */
	.prose code {
		background-color: rgba(255, 255, 255, 0.1);
		padding: 0.2em 0.4em;
		border-radius: 0.25em;
		font-size: 0.875em;
		color: #ffffff;
		font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
	}

	.prose pre {
		background-color: #1e293b;
		padding: 1.5em;
		border-radius: 0.5em;
		overflow-x: auto;
		margin-bottom: 2em;
		border: 1px solid rgba(255, 255, 255, 0.1);
	}

	/* Blockquotes */
	.prose blockquote {
		border-left: 4px solid #93c5fd;
		padding: 1.5em 1.5em;
		margin: 2em 0;
		background-color: rgba(255, 255, 255, 0.05);
		border-radius: 0.5em;
		font-style: italic;
		color: #ffffff;
	}

	.prose blockquote p {
		margin: 0;
		line-height: 1.7;
	}

	/* Links */
	.prose a {
		text-decoration: none;
		font-weight: 500;
		color: #93c5fd;
		transition: color 0.2s ease;
	}

	.prose a:hover {
		color: #60a5fa;
		text-decoration: underline;
	}

	/* Images */
	.prose img {
		border-radius: 0.75em;
		margin: 2.5em auto;
		box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
	}

	/* Horizontal rule */
	.prose hr {
		border-color: rgba(255, 255, 255, 0.1);
		margin: 3em 0;
	}

	/* Responsive adjustments */
	@media (max-width: 768px) {
		.prose {
			padding: 0 1rem;
		}

		.prose h1 {
			font-size: 2rem;
		}

		.prose h2 {
			font-size: 1.75rem;
		}

		.prose h3 {
			font-size: 1.25rem;
		}
	}
</style>
